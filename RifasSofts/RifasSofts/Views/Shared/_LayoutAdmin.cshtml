<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>RIFAS-Dashboard</title>
    <!-- BOOTSTRAP STYLES-->
    @Styles.Render("~/Content/Admin/assets/css/bootstrap.css")
    @Styles.Render("~/Content/Admin/assets/css/custom.css")
    @Styles.Render("~/Content/Admin/assets/css/font-awesome.css")
    @Styles.Render("~/Content/Admin/assets/js/morris/morris-0.4.3.min.css")
  
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
