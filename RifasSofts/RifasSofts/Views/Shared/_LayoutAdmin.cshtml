                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("IndexAdmin","Home")">RIFAS Softs</a>
            </div>
            <div style="color: white;
padding: 15px 50px 5px 50px;
float: right;
font-size: 16px;"> Last access : 30 May 2014 &nbsp; <a href="#" class="btn btn-danger square-btn-adjust">Logout</a> </div>
        </nav>
        <!-- /. NAV TOP  -->
        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">
                    <li class="text-center">
                        <img src="~/Content/Admin/assets/img/find_user.png" class="user-image img-responsive" />
                    </li>

                    <li>
                        <a class="active-menu" href="@Url.Action("IndexAdmin","Home")">
                            <i class="fa fa-dashboard fa-3x"></i> Dashboard
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Admins")">
                            <i class="fa fa-desktop fa-3x"></i> Manage Admin Accounts
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Categories")"><i class="fa fa-qrcode fa-3x"></i> Manage Catagory</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Prods")"><i class="fa fa-bar-chart-o fa-3x"></i> Manage Products</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Purchase","Purchase")"><i class="fa fa-table fa-3x"></i> Manage Purchases</a>
                    </li>

                    <li>
                        <a href="#"><i class="fa fa-sitemap fa-3x"></i> Reports<span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="@Url.Action("uiAdmin","Home")">Stock Report</a>
                            </li>
                            <li>
                                <a href="#"> Profit and Loss Report</a>
                            </li>
                            <li>
                                <a href="#"> Transaction Reports<span class="fa arrow"></span></a>
                                <ul class="nav nav-third-level">
                                    <li>
                                        <a href="@Url.Action("PurchaseReport ","Reports")">Purchases Report</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("SaleReport","Reports")">Sale  Report</a>
                                    </li>


                                </ul>

                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="@Url.Action("tabPanelAdmin","Home")"><i class="fa fa-square-o fa-3x"></i> Feed back</a>
                    </li>
                </ul>

            </div>

        </nav>
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper">
            <div id="page-inner">






                @RenderBody()


            </div>
            <!-- /. PAGE INNER  -->
        </div>
        <!-- /. PAGE WRAPPER  -->
    </div>
    <!-- /. WRAPPER  -->

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Content/Admin/assets/js/jquery-1.10.2.js")
    @Scripts.Render("~/Content/Admin/assets/js/bootstrap.min.js")
    @Scripts.Render("~/Content/Admin/assets/js/jquery.metisMenu.js")
    @Scripts.Render("~/Content/Admin/assets/js/morris/raphael-2.1.0.min.js")
